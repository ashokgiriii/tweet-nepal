<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tweet Nepal - Welcome</title>
  <link rel="shortcut icon" href="/favicon/android-chrome-192x192.png" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #e9a130;
      --primary-dark: #c98b28;
      --background: #181a1b;
      --card-bg: #23272b;
      --border: #31363b;
      --input-bg: #23272b;
      --input-border: #3a3f44;
      --white: #fff;
      --grey: #b0b3b8;
      --shadow: 0 4px 24px rgba(0, 0, 0, 0.18);
    }

    html,
    body {
      height: 100%;
      background: var(--background);
      font-family: 'Inter', Arial, sans-serif;
    }

    #main {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      width: 100%;
      max-width: 400px;
    }

    .form_area {
      background: var(--card-bg);
      border-radius: 18px;
      box-shadow: var(--shadow);
      padding: 2.5rem 2rem 2rem 2rem;
      width: 100%;
      margin-bottom: 2rem;
      border: 1px solid var(--border);
    }

    .title {
      font-weight: 900;
      font-size: 2rem;
      color: var(--primary);
      margin-bottom: 0.5rem;
      letter-spacing: 1px;
    }

    .sub_title {
      font-weight: 600;
      color: var(--grey);
      margin-bottom: 1.5rem;
    }

    input.form_style {
      width: 100%;
      padding: 0.85rem 1rem;
      margin-bottom: 1.1rem;
      border-radius: 8px;
      border: 1px solid var(--input-border);
      background: var(--input-bg);
      color: var(--white);
      font-size: 1rem;
      transition: border 0.2s;
    }

    input.form_style:focus {
      border-color: var(--primary);
      outline: none;
    }

    .btn {
      width: 100%;
      padding: 0.9rem 0;
      font-size: 1.1rem;
      background: var(--primary);
      color: var(--white);
      font-weight: 700;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-bottom: 1rem;
      transition: background 0.2s;
    }

    .btn:disabled {
      background: var(--primary-dark);
      cursor: not-allowed;
    }

    .btn:hover:not(:disabled) {
      background: var(--primary-dark);
    }

    .link {
      color: var(--primary);
      font-weight: 600;
      text-decoration: none;
      transition: color 0.2s;
    }

    .link:hover {
      color: var(--white);
      text-decoration: underline;
    }

    .error-message {
      color: #ff4444;
      font-size: 0.85rem;
      min-height: 1.2em;
      margin-top: -0.8rem;
      margin-bottom: 0.5rem;
      padding-left: 0.25rem;
      display: block;
      font-weight: 500;
    }

    .error-message.hidden {
      display: none;
    }

    .usernameAvailable {
      color: #ff4444;
      font-size: 0.85rem;
      min-height: 1.2em;
      margin-top: -0.8rem;
      margin-bottom: 0.5rem;
      padding-left: 0.25rem;
      font-weight: 500;
    }

    input.form_style.error {
      border-color: #ff4444;
      background: rgba(255, 68, 68, 0.1);
    }

    input.form_style:focus.error {
      border-color: #ff4444;
      box-shadow: 0 0 0 2px rgba(255, 68, 68, 0.2);
    }

    @media (max-width: 500px) {
      .form_area {
        padding: 1.5rem 1rem;
      }

      .container {
        max-width: 95vw;
      }
    }
  </style>
</head>

<body>
  <div id="main">
    <!-- Sign Up Form -->
    <div class="container" id="signup">
      <div class="form_area">
        <p class="title">Sign Up</p>
        <p class="sub_title">Create your Tweet Nepal account</p>
        <form action="/createUser" method="post" autocomplete="off" onsubmit="return validateForm()">
          <input placeholder="Enter Your Name" class="form_style" type="text" name="name" id="name" oninput="validateName()">
          <span class="error-message hidden" id="nameError"></span>
          
          <input placeholder="Enter Your Password" id="password" class="form_style" name="password" type="password" oninput="validatePassword()">
          <span class="error-message hidden" id="passwordError"></span>
          
          <input placeholder="Enter Your Username" class="form_style" type="text" name="username" id="username"
            onkeyup="checkUsernameAvailability()" oninput="validateUsername()">
          <p class="usernameAvailable" id="usernameMessage"></p>
          <span class="error-message hidden" id="usernameError"></span>
          
          <button class="btn" id="submitButton" type="submit">Sign Up</button>
          <div>
            <span style="color: white;">Have an account ? 
            </span>
            <a class="link" href="#login">Login here</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Login Form -->
    <div class="container" id="login">
      <div class="form_area">
        <p class="title">Log In</p>
        <p class="sub_title">Welcome back! Please log in.</p>
        <form action="/login" method="post" autocomplete="off">
          <input style="width: 90%;" placeholder="Enter your username" class="form_style" type="text" name="username" id="login-username">
          <input style="width: 90%;" placeholder="Enter your password" class="form_style" type="password" name="password">
          <button class="btn">Log In</button>
          <div>
            <span style="color: white;">New here ? 
            </span>
            <a class="link" href="#signup">Sign up here</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    async function checkUsernameAvailability() {
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value.trim();
      const name = document.getElementById('name').value.trim();
      const messageElement = document.getElementById('usernameMessage');
      const submitButton = document.getElementById('submitButton');

      submitButton.disabled = true;
      messageElement.textContent = "";

      if (!username || !password || !name) {
        return;
      }

      try {
        const response = await fetch('/checkUsername', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username })
        });

        const data = await response.json();

        if (data.message === 'Username already exists') {
          messageElement.textContent = data.message;
          submitButton.disabled = true;
        } else {
          messageElement.textContent = '';
          submitButton.disabled = false;
        }
      } catch (error) {
        console.error('Error checking username availability:', error);
      }
    }

    function showError(fieldId, message) {
      const field = document.getElementById(fieldId);
      const errorElement = document.getElementById(fieldId + 'Error');
      
      if (field && errorElement) {
        field.classList.add('error');
        errorElement.textContent = message;
        errorElement.classList.remove('hidden');
      }
    }

    function hideError(fieldId) {
      const field = document.getElementById(fieldId);
      const errorElement = document.getElementById(fieldId + 'Error');
      
      if (field && errorElement) {
        field.classList.remove('error');
        errorElement.classList.add('hidden');
      }
    }

    function validateName() {
      const name = document.getElementById('name').value.trim();
      
      if (!name) {
        showError('name', 'Name is required');
        return false;
      }
      
      if (!isValidProperName(name)) {
        showError('name', 'Name should contain only letters and spaces (max 3 words)');
        return false;
      }
      
      hideError('name');
      return true;
    }

    function validateUsername() {
      const username = document.getElementById('username').value.trim();
      
      if (!username) {
        showError('username', 'Username is required');
        return false;
      }
      
      if (username.length < 3) {
        showError('username', 'Username must be at least 3 characters');
        return false;
      }
      
      if (!isValidUsername(username)) {
        showError('username', 'Username must start with a letter and contain only letters and numbers');
        return false;
      }
      
      hideError('username');
      checkUsernameAvailability();
      return true;
    }

    function validatePassword() {
      const password = document.getElementById('password').value.trim();
      
      if (!password) {
        showError('password', 'Password is required');
        return false;
      }
      
      if (password.length < 8) {
        showError('password', 'Password must be at least 8 characters long');
        return false;
      }
      
      if (!isValidPassword(password)) {
        showError('password', 'Password must include uppercase, lowercase, and a digit');
        return false;
      }
      
      hideError('password');
      return true;
    }

    function validateForm() {
      const nameValid = validateName();
      const usernameValid = validateUsername();
      const passwordValid = validatePassword();

      if (!nameValid || !usernameValid || !passwordValid) {
        return false;
      }

      const usernameMessage = document.getElementById('usernameMessage');
      if (usernameMessage.textContent === 'Username already exists') {
        return false;
      }

      return true;
    }

    function isValidProperName(name) {
      return /^[A-Za-z]+( [A-Za-z]+){0,2}$/
.test(name);
    }

    function isValidUsername(username) {
      return /^[A-Za-z][A-Za-z0-9]*$/.test(username);
    }

    function isValidPassword(password) {
      return /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/.test(password);
    }
  </script>
</body>

</html>
