<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tweet Nepal - Welcome</title>
  <link rel="shortcut icon" href="/favicon/android-chrome-192x192.png" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #e9a130;
      --primary-dark: #c98b28;
      --background: #181a1b;
      --card-bg: #23272b;
      --border: #31363b;
      --input-bg: #23272b;
      --input-border: #3a3f44;
      --white: #fff;
      --grey: #b0b3b8;
      --shadow: 0 4px 24px rgba(0, 0, 0, 0.18);
    }

    html,
    body {
      height: 100%;
      background: var(--background);
      font-family: 'Inter', Arial, sans-serif;
    }

    #main {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      width: 100%;
      max-width: 400px;
    }

    .form_area {
      background: var(--card-bg);
      border-radius: 18px;
      box-shadow: var(--shadow);
      padding: 2.5rem 2rem 2rem 2rem;
      width: 100%;
      margin-bottom: 2rem;
      border: 1px solid var(--border);
    }

    .title {
      font-weight: 900;
      font-size: 2rem;
      color: var(--primary);
      margin-bottom: 0.5rem;
      letter-spacing: 1px;
    }

    .sub_title {
      font-weight: 600;
      color: var(--grey);
      margin-bottom: 1.5rem;
    }

    input.form_style {
      width: 100%;
      padding: 0.85rem 1rem;
      margin-bottom: 1.1rem;
      border-radius: 8px;
      border: 1px solid var(--input-border);
      background: var(--input-bg);
      color: var(--white);
      font-size: 1rem;
      transition: border 0.2s;
    }

    input.form_style:focus {
      border-color: var(--primary);
      outline: none;
    }

    .btn {
      width: 100%;
      padding: 0.9rem 0;
      font-size: 1.1rem;
      background: var(--primary);
      color: var(--white);
      font-weight: 700;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-bottom: 1rem;
      transition: background 0.2s;
    }

    .btn:disabled {
      background: var(--primary-dark);
      cursor: not-allowed;
    }

    .btn:hover:not(:disabled) {
      background: var(--primary-dark);
    }

    .link {
      color: var(--primary);
      font-weight: 600;
      text-decoration: none;
      transition: color 0.2s;
    }

    .link:hover {
      color: var(--white);
      text-decoration: underline;
    }

    .usernameAvailable {
      color: #ff6b6b;
      font-size: 0.95em;
      min-height: 1.2em;
      margin-bottom: 0.5em;
    }

    @media (max-width: 500px) {
      .form_area {
        padding: 1.5rem 1rem;
      }

      .container {
        max-width: 95vw;
      }
    }
  </style>
</head>

<body>
  <div id="main">
    <!-- Sign Up Form -->
    <div class="container" id="signup">
      <div class="form_area">
        <p class="title">Sign Up</p>
        <p class="sub_title">Create your Tweet Nepal account</p>
        <form action="/createUser" method="post" autocomplete="off" onsubmit="return validateForm()">
          <input placeholder="Enter Your Name" class="form_style" type="text" name="name" id="name">
          <input placeholder="Enter Your Password" id="password" class="form_style" name="password" type="password">
          <input placeholder="Enter Your Username" class="form_style" type="text" name="username" id="username"
            onkeyup="checkUsernameAvailability()">
          <p class="usernameAvailable" id="usernameMessage"></p>
          <button class="btn" id="submitButton" type="submit">Sign Up</button>
          <div>
            <span>Have an account? <a class="link" href="#login">Login here</a></span>
          </div>
        </form>
      </div>
    </div>

    <!-- Login Form -->
    <div class="container" id="login">
      <div class="form_area">
        <p class="title">Log In</p>
        <p class="sub_title">Welcome back! Please log in.</p>
        <form action="/login" method="post" autocomplete="off">
          <input placeholder="Enter your username" class="form_style" type="text" name="username" id="login-username">
          <input placeholder="Enter your password" class="form_style" type="password" name="password">
          <button class="btn">Log In</button>
          <div>
            <span>New here? <a class="link" href="#signup">Sign up here</a></span>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    async function checkUsernameAvailability() {
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value.trim();
      const name = document.getElementById('name').value.trim();
      const messageElement = document.getElementById('usernameMessage');
      const submitButton = document.getElementById('submitButton');

      submitButton.disabled = true;
      messageElement.textContent = "";

      if (!username || !password || !name) {
        return;
      }

      try {
        const response = await fetch('/checkUsername', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username })
        });

        const data = await response.json();

        if (data.message === 'Username already exists') {
          messageElement.textContent = data.message;
          submitButton.disabled = true;
        } else {
          messageElement.textContent = '';
          submitButton.disabled = false;
        }
      } catch (error) {
        console.error('Error checking username availability:', error);
      }
    }

    function validateForm() {
      const name = document.getElementById('name').value.trim();
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value.trim();

      if (!isValidProperName(name)) {
        alert("Please enter a valid name with only alphabetic characters (one word only).");
        return false;
      }

      if (!isValidUsername(username)) {
        alert("Please enter a valid username. It should start with a letter and contain only letters and numbers.");
        return false;
      }

      if (!isValidPassword(password)) {
        alert("Password must be at least 8 characters long and include one uppercase letter, one lowercase letter, and one digit.");
        return false;
      }

      return true;
    }

    function isValidProperName(name) {
      return /^[A-Za-z]+( [A-Za-z]+){0,2}$/
.test(name);
    }

    function isValidUsername(username) {
      return /^[A-Za-z][A-Za-z0-9]*$/.test(username);
    }

    function isValidPassword(password) {
      return /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/.test(password);
    }
  </script>
</body>

</html>
